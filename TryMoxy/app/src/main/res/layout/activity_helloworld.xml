<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexanderbespalov.trymoxy.ui.activity.HelloWorldActivity">

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="132dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="8dp"
        android:text="3"
        android:onClick="clickButton3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="132dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="8dp"
        android:text="2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <TextView
        android:id="@+id/activity_hello_world_text_view_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="132dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="48dp"
        android:text="1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <fragment
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:name="com.example.alexanderbespalov.trymoxy.ui.fragment.ButtonFragment"
        android:id="@+id/button_fragment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_hello_world_text_view_message"
        app:layout_constraintVertical_bias="0.443"
        android:layout_marginTop="8dp"
        tools:layout="@layout/button_layout" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="368dp"
        android:layout_height="90dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="413dp" />
</android.support.constraint.ConstraintLayout>
